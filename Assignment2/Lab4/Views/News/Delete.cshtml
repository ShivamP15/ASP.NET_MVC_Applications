@model Lab4.Models.ViewModels.NewsViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete news for @Model.SportClub.Title</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>News</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.News.First().FileName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.News.First().FileName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.News.First().Url)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.News.First().Url" style="max-width: 350px;" />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="News.First().Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-id="@Model.SportClub.Id">Back to List</a>
    </form>
</div>
