@model Lab4.Models.ViewModels.NewsViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Show news for @Model.SportClub.Title</h1>

<p>
    <a asp-action="Create" asp-route-id="@Model.SportClub.Id">Create New</a>
    <br><br>
    <a asp-controller="SportClubs" asp-action="Index"> Back to List</a>
</p>
@if (Model.News.Count() == 0)
{
    <p>There are no files to display.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.News.First().FileName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.News.First().Url)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model.News) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FileName)
                </td>
                <td>
                    <img src="@item.Url" style="max-width: 350px;" />
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
}
