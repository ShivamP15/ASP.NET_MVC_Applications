@page
@model Lab5.Pages.Predictions.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Prediction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" method="post">
            <div class="form-group">
                <div class="custom-radio">
                    <input type="radio" name="question" value="computer" />
                    What will the computers look like in 20 years?
                    <br />
                    <input type="radio" name="question" value="earth" />
                    What will the earth look like in 20 years?
                </div>
                <div class="btn btn-sm float-left">
                    <input name="file" type="file" required>
                </div>
                <div class="form-group">
                    <input type="submit" value="Upload Now" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
